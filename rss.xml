layout: nil
---
<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>best app 8</title>
    <link>http://bestapp8.com/</link>
    <atom:link href="http://bestapp8.com/rss.xml" rel="self" type="application/rss+xml" />
    <description>各种软件技巧，开源代码，系统设定等等</description>
    <language>中文</language>
    <pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>

    {% for post in site.posts limit:10 %}
    <item>
      <title>{{ post.title }}</title>
      <link>http://bestapp8.com/{{ post.url }}</link>
      <pubDate>{{ post.date | date_to_string }}</pubDate>
      <author>鹭飞</author>
      <guid>http://bestapp8.com{{ post.id }}</guid>
      <description>{{ post.content | xml_escape }}</description>
    </item>
    {% endfor %}
  </channel>
</rss>
